#!/usr/bin/env bash
# This script displays "I am invincible!!!" when receiving SIGTERM but doesn't terminate

# معالج إشارة SIGTERM
trap 'echo "I am invincible!!!"' SIGTERM

# إنشاء ملف مؤقت
TEMP_FILE=$(mktemp)
echo "PID: $$" > "$TEMP_FILE"

# استخدام tail -f الذي يستجيب للإشارات بشكل جيد
tail -f "$TEMP_FILE" &
TAIL_PID=$!

# انتظر tail
wait $TAIL_PID

# تنظيف
rm -f "$TEMP_FILE"
