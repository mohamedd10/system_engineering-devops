#!/usr/bin/env bash
# This script displays "I am invincible!!!" when receiving SIGTERM but doesn't terminate

# تعامل مع SIGTERM بعرض الرسالة
trap 'echo "I am invincible!!!"' SIGTERM

# استمر في العمل للأبد
while true
do
    # انتظر باستخدام أمر لا يتجاهل الإشارات
    sleep infinity &
    wait $!
done
