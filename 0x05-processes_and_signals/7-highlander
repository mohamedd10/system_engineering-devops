#!/usr/bin/env bash
# This script displays "I am invincible!!!" when receiving SIGTERM but doesn't terminate

# دالة للتعامل مع إشارة SIGTERM
handle_sigterm() {
    echo "I am invincible!!!"
}

# تسجيل دالة التعامل مع SIGTERM
trap handle_sigterm SIGTERM

# البرنامج يعمل إلى الأبد
echo "PID: $$"
while true; do
    sleep 1
done
