#!/usr/bin/env bash
# This script displays "I am invincible!!!" when receiving SIGTERM but doesn't terminate

# عند استقبال SIGTERM، اعرض الرسالة لكن لا تخرج
trap 'echo "I am invincible!!!"' SIGTERM

# حلقة لا نهائية
echo "PID: $$"
while :
do
    # انتظر إشارة باستخدام sleep في الخلفية
    sleep 1000 &
    wait $!
done
