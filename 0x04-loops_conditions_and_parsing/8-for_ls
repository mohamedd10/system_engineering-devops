#!/usr/bin/env bash
# This script displays the contents of the current directory
# showing only the part after the first dash in each filename

# Loop through all files in the current directory
for file in *
do
    # Check if it's a regular file (not a directory) and doesn't start with a dot
    if [ -f "$file" ]; then
        # Extract and display the part after the first dash
        echo "$file" | cut -d'-' -f2-
    fi
done
